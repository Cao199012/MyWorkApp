<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.caojian.myworkapp.ui.activity.IntroduceActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"></android.support.v7.widget.Toolbar>
    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:onClick="go2Login"
        android:layout_margin="20dp"
        android:background="@color/transparent"
        android:textColor="@color/white"
        android:text="登录"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:onClick="go2Register"
        android:layout_marginBottom="30dp"
        android:text="注册加入"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/intro_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/tip_body"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    </LinearLayout>
</FrameLayout>
