    <RelativeLayout
        android:id="@+id/body_signature"
        android:layout_width="match_parent"
        android:layout_below="@+id/body_name"
        android:layout_marginTop="1dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="会员信息"/>
        <TextView
            android:id="@+id/vip_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=""/>
    </RelativeLayout>
<RelativeLayout
        android:id="@+id/body_rail"
        android:layout_width="match_parent"
        android:layout_below="@+id/body_signature"
        android:layout_marginTop="1dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="围栏报警"/>
        <TextView
            android:id="@+id/vip_rail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=""/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/body_track"
        android:layout_width="match_parent"
        android:layout_below="@+id/body_rail"
        android:layout_marginTop="1dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="查看轨迹"/>
        <TextView
            android:id="@+id/vip_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=""/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lower_level_one"
        android:layout_width="match_parent"
        android:layout_below="@+id/body_track"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="下级会员数"/>
        <TextView
            android:id="@+id/level_one_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lower_level_two"
        android:layout_width="match_parent"
        android:layout_below="@+id/lower_level_one"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="下下级会员数"/>
        <TextView
            android:id="@+id/level_two_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""/>
    </RelativeLayout>
</RelativeLayout>
